---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  image: any; // Always a valid import
  imageAlt: string;
  link?: string;
  linkText?: string;
}

const { title, description, image, imageAlt, link, linkText = "Learn more" } = Astro.props;
---

<div class="feature-card">
  <div class="feature-image">
    <Image src={image} alt={imageAlt} width={400} height={200} class="lofi-img" />
    <div class="grain-overlay"></div>
    <div class="scanlines-overlay"></div>
    <div class="color-noise-overlay"></div>
    <div class="lofi-overlay"></div>
  </div>
  <div class="feature-content">
    <h3>{title}</h3>
    <p>{description}</p>
    {link && (
      <a href={link} class="learn-more-button">{linkText}</a>
    )}
  </div>
</div>

<style>
  .feature-card {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    transition: transform 0.3s, box-shadow 0.3s;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  }
  
  .feature-image {
    width: 100%;
    height: 200px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    position: relative;
    overflow: hidden;
  }
  
  .feature-image .lofi-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: contrast(1.25);
    transition: transform 0.3s, filter 0.3s;
    position: relative;
    z-index: 1;
  }

  .feature-image .grain-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 2;
    opacity: 0.5;
    background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><filter id="noise"><feTurbulence type="fractalNoise" baseFrequency="0.8" numOctaves="4" stitchTiles="stitch"/></filter><rect width="100" height="100" filter="url(%23noise)"/></svg>');
    background-size: 200px 200px;
    mix-blend-mode: multiply;
  }

  .feature-image .scanlines-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 3;
    opacity: 0.28;
    background: repeating-linear-gradient(
      to bottom,
      rgba(0,0,0,0.32) 0px,
      rgba(0,0,0,0.32) 2px,
      transparent 2px,
      transparent 5px
    );
  }

  .feature-image .color-noise-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 4;
    opacity: 0.18;
    background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40"><rect width="40" height="40" fill="none"/><circle cx="5" cy="5" r="1.5" fill="red"/><circle cx="15" cy="10" r="1.2" fill="blue"/><circle cx="25" cy="20" r="1.3" fill="lime"/><circle cx="35" cy="30" r="1.1" fill="yellow"/><circle cx="10" cy="30" r="1.4" fill="magenta"/><circle cx="30" cy="10" r="1.2" fill="cyan"/></svg>');
    background-size: 40px 40px;
    mix-blend-mode: lighten;
  }
  .feature-image .lofi-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(245,245,245,0.13);
    mix-blend-mode: lighten;
    z-index: 5;
    pointer-events: none;
  }
  
  .feature-card:hover .feature-image img {
    transform: scale(1.05);
  }
  
  .feature-card:hover .feature-image .lofi-img {
    transform: scale(1.05);
    filter: contrast(1.35);
  }
  
  .feature-content {
    padding: 2rem;
    text-align: center;
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .feature-card h3 {
    color: var(--tetra-primary);
    font-size: 1.5rem;
    min-height: 3.6rem;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  
  .feature-card p {
    color: var(--tetra-dark);
    line-height: 1.6;
    flex: 1;
    display: flex;
    align-items: flex-start;
    margin: 0;
    margin-bottom: 1.5rem;
    opacity: 0.8;
  }

  .learn-more-button {
    background: var(--tetra-secondary);
    color: var(--tetra-white);
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    display: inline-block;
    margin-top: auto;
  }

  .learn-more-button:hover {
    background: var(--tetra-primary);
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(27, 54, 93, 0.2);
  }
  
  @media (max-width: 768px) {
    .feature-image {
      height: 150px;
    }
    
    .feature-card h3 {
      min-height: 4.8rem;
      font-size: 1.3rem;
    }
  }
</style> 