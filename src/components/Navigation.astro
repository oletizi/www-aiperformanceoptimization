---
// Navigation component props
interface Props {
  currentPage?: string;
}

const { currentPage } = Astro.props;
---

<header>
  <nav class="container">
    <div class="logo">
      <h2>AI Performance Optimization</h2>
    </div>
    <ul>
      <li><a href="/" class={currentPage === 'home' ? 'active' : ''}>Home</a></li>
      <li><a href="/strategies" class={currentPage === 'strategies' ? 'active' : ''}>Strategies</a></li>
      <li><a href="/tools" class={currentPage === 'tools' ? 'active' : ''}>Tools</a></li>
      <li><a href="/model-connectivity" class={currentPage === 'connectivity' ? 'active' : ''}>Connectivity</a></li>
      <li><a href="/learn" class={currentPage === 'learn' ? 'active' : ''}>Learning Center</a></li>
      <li><a href="/blog" class={currentPage === 'blog' ? 'active' : ''}>Blog</a></li>
    </ul>
  </nav>
</header>

<style>
  :root {
    --tetra-primary: #1B365D;
    --tetra-secondary: #009BDF;
    --tetra-accent: #00BFB3;
    --tetra-light: #E6F1F8;
    --tetra-dark: #0A192F;
    --tetra-white: #FFFFFF;
    --tetra-gray: #F5F7FA;
    --tetra-orange: #FF6B35;
  }

  header {
    background: linear-gradient(135deg, var(--tetra-primary) 0%, var(--tetra-secondary) 100%);
    color: var(--tetra-white);
    padding: 1rem 0;
    box-shadow: 0 2px 10px rgba(27, 54, 93, 0.1);
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  nav ul {
    display: flex;
    list-style: none;
    gap: 2rem;
  }
  
  nav a {
    color: var(--tetra-white);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    padding: 0.5rem 1rem;
    border-radius: 6px;
  }
  
  nav a:hover {
    background: rgba(0, 191, 179, 0.2);
    color: var(--tetra-white);
    transform: translateY(-1px);
  }
  
  nav a.active {
    background: var(--tetra-accent);
    color: var(--tetra-white);
    font-weight: 600;
  }

  .logo h2 {
    color: var(--tetra-white);
    margin: 0;
    font-size: 1.5rem;
    font-weight: 700;
  }
  
  @media (max-width: 768px) {
    nav ul {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style> 