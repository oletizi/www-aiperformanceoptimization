---
// Navigation component props
interface Props {
  currentPage?: string;
}

const { currentPage } = Astro.props;
---

<header>
  <nav class="container">
    <div class="logo">
      <h2>AI Performance Optimization</h2>
    </div>
    <button id="hamburger" class="hamburger" aria-label="Open navigation menu" aria-controls="nav-menu" aria-expanded="false">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
    <ul id="nav-menu" class="">
      <li><a href="/" class={currentPage === 'home' ? 'active' : ''}>Home</a></li>
      <li><a href="/learn" class={currentPage === 'learn' ? 'active' : ''}>Learning Center</a></li>
      <li><a href="/sitemap" class={currentPage === 'sitemap' ? 'active' : ''}>Site Map</a></li>
    </ul>
  </nav>
</header>

<script is:client="load">
  const hamburger = document.getElementById('hamburger');
  const navMenu = document.getElementById('nav-menu');
  let menuOpen = false;
  function setMenu(open) {
    menuOpen = open;
    hamburger.setAttribute('aria-expanded', open ? 'true' : 'false');
    navMenu.className = open ? 'open' : '';
  }
  hamburger.addEventListener('click', () => setMenu(!menuOpen));
  // Optional: close menu on nav link click (for SPA feel)
  navMenu.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => setMenu(false));
  });
</script>

<style>
  :root {
    --tetra-primary: #1B365D;
    --tetra-secondary: #009BDF;
    --tetra-accent: #00BFB3;
    --tetra-light: #E6F1F8;
    --tetra-dark: #0A192F;
    --tetra-white: #FFFFFF;
    --tetra-gray: #F5F7FA;
    --tetra-orange: #FF6B35;
    --nav-height: 4rem;
  }

  header {
    background: linear-gradient(135deg, var(--tetra-primary) 0%, var(--tetra-secondary) 100%);
    color: var(--tetra-white);
    height: var(--nav-height);
    min-height: var(--nav-height);
    max-height: var(--nav-height);
    padding: 0;
    box-shadow: 0 2px 10px rgba(27, 54, 93, 0.1);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    height: var(--nav-height);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  nav {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: var(--nav-height);
  }
  
  nav ul {
    display: flex;
    list-style: none;
    gap: 2rem;
    transition: max-height 0.3s cubic-bezier(0.4,0,0.2,1);
    overflow: hidden;
    align-items: center;
    height: var(--nav-height);
  }
  
  nav a {
    color: var(--tetra-white);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    line-height: 1.5;
    display: flex;
    align-items: center;
    height: var(--nav-height);
  }
  
  nav a:hover {
    background: rgba(0, 191, 179, 0.2);
    color: var(--tetra-white);
    transform: translateY(-1px);
  }
  
  nav a.active {
    background: var(--tetra-accent);
    color: var(--tetra-white);
    font-weight: 600;
  }

  .logo h2 {
    color: var(--tetra-white);
    margin: 0;
    font-size: 1.5rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    height: var(--nav-height);
  }
  
  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 2.5rem;
    height: 2.5rem;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1100;
    margin-left: 1rem;
  }
  .hamburger .bar {
    width: 1.75rem;
    height: 0.1875rem;
    background: var(--tetra-white);
    margin: 0.25rem 0;
    border-radius: 2px;
    transition: all 0.3s;
  }
  @media (max-width: 768px) {
    .hamburger {
      display: flex;
    }
    nav ul {
      position: absolute;
      top: var(--nav-height);
      right: 2rem;
      background: var(--tetra-primary);
      box-shadow: 0 8px 24px rgba(27,54,93,0.12);
      border-radius: 10px;
      flex-direction: column;
      gap: 0;
      min-width: 11.25rem;
      max-height: 0;
      pointer-events: none;
      opacity: 0;
      transition: max-height 0.3s cubic-bezier(0.4,0,0.2,1), opacity 0.2s;
      z-index: 1050;
      height: auto;
    }
    nav ul.open {
      max-height: 18.75rem;
      opacity: 1;
      pointer-events: auto;
      padding: 1rem 0;
    }
    nav ul li {
      margin: 0;
      padding: 0;
    }
    nav ul li a {
      display: block;
      padding: 1rem 2rem;
      border-radius: 0;
      border-bottom: 1px solid rgba(255,255,255,0.08);
      height: auto;
    }
    nav ul li:last-child a {
      border-bottom: none;
    }
  }
</style> 