---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage?: any;
  showCta?: boolean;
}

const { 
  title, 
  description, 
  ctaText = "Get Started", 
  ctaLink = "/learn", 
  backgroundImage,
  showCta = true 
} = Astro.props;
---

<section class="hero">
  {backgroundImage && (
    <Image src={backgroundImage} alt="" class="hero-bg" width={1792} height={1024} />
  )}
  <div class="container">
    <h1>{title}</h1>
    <p>{description}</p>
    {showCta && (
      <a href={ctaLink} class="cta-button">{ctaText}</a>
    )}
  </div>
</section>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .hero {
    background: linear-gradient(135deg, var(--tetra-primary) 0%, var(--tetra-secondary) 100%);
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    color: var(--tetra-white);
    padding: 6rem 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(27, 54, 93, 0.3);
    z-index: 1;
  }

  .hero .container {
    position: relative;
    z-index: 2;
  }

  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    font-weight: 700;
    text-shadow: 2px 2px 4px rgba(10, 25, 47, 0.3);
  }

  .hero p {
    font-size: 1.3rem;
    margin-bottom: 2.5rem;
    opacity: 0.95;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    text-shadow: 1px 1px 2px rgba(10, 25, 47, 0.3);
  }

  .cta-button {
    display: inline-block;
    background: var(--tetra-orange);
    color: var(--tetra-white);
    padding: 1.2rem 2.5rem;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: transform 0.3s, box-shadow 0.3s, background 0.3s;
    box-shadow: 0 4px 15px rgba(0, 155, 223, 0.2);
  }

  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 191, 179, 0.3);
    background: var(--tetra-secondary);
    color: var(--tetra-white);
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.5rem;
    }
    .hero p {
      font-size: 1.1rem;
    }
  }
</style>