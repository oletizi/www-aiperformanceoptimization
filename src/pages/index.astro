---
// Import components
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import FeatureCard from '../components/FeatureCard.astro';
import placeholderImg from '../assets/images/placeholder.png';
import heroBgImg from '../assets/images/hero-bg.jpg';
import costOptimizationImg from '../assets/images/cost-optimization.jpg';
import performanceTuningImg from '../assets/images/performance-tuning.jpg';
import reliabilityResilienceImg from '../assets/images/reliability-resilience.jpg';
import infrastructureManagementImg from '../assets/images/infrastructure-management.jpg';
import monitoringAnalyticsImg from '../assets/images/monitoring-analytics.jpg';
import bestPracticesImg from '../assets/images/best-practices.jpg';

// SEO metadata
const title = "AI Performance Optimization: Master AI Resource Management";
const description = "Learn how to optimize AI performance, reduce costs, and improve reliability. Expert guides on AI model management, cost optimization, and infrastructure best practices.";
const canonicalURL = "https://aiperformanceoptimization.com";
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "AI Performance Optimization",
  "description": "Expert guides and tools for AI performance optimization",
  "url": canonicalURL
};

// Feature data - always use placeholder image
const features = [
  {
    title: "Cost Optimization",
    description: "Learn strategies to reduce AI costs by 30-70% while maintaining or improving performance.",
    image: costOptimizationImg,
    imageAlt: "Cost Optimization"
  },
  {
    title: "Performance Tuning",
    description: "Optimize AI model performance for speed, accuracy, and efficiency across different providers.",
    image: performanceTuningImg,
    imageAlt: "Performance Tuning"
  },
  {
    title: "Reliability & Resilience",
    description: "Build robust AI systems with failover strategies, error handling, and monitoring.",
    image: reliabilityResilienceImg,
    imageAlt: "Reliability & Resilience"
  },
  {
    title: "Infrastructure Management",
    description: "Master tools and techniques for managing AI infrastructure at scale.",
    image: infrastructureManagementImg,
    imageAlt: "Infrastructure Management"
  },
  {
    title: "Monitoring & Analytics",
    description: "Implement comprehensive monitoring and analytics for AI model performance.",
    image: monitoringAnalyticsImg,
    imageAlt: "Monitoring & Analytics"
  },
  {
    title: "Best Practices",
    description: "Learn industry best practices for production-ready AI deployments.",
    image: bestPracticesImg,
    imageAlt: "Best Practices"
  }
];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content="AI performance optimization, AI cost optimization, machine learning optimization, AI model management, AI infrastructure, AI reliability" />
		<meta name="author" content="AI Performance Optimization Experts" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/og-image.jpg" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content="/og-image.jpg" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Structured Data -->
		<script type="application/ld+json">{JSON.stringify(jsonLd)}</script>
		
		<!-- Styles -->
		<style>
			:root {
				--tetra-primary: #1B365D;
				--tetra-secondary: #009BDF;
				--tetra-accent: #00BFB3;
				--tetra-light: #E6F1F8;
				--tetra-dark: #0A192F;
				--tetra-white: #FFFFFF;
				--tetra-gray: #F5F7FA;
				--tetra-orange: #FF6B35;
			}

			body {
				font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				line-height: 1.6;
				color: var(--tetra-primary);
				background-color: var(--tetra-gray);
				padding-top: 80px; /* Account for fixed navigation */
			}

			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 20px;
			}

			.hero {
				background: linear-gradient(135deg, var(--tetra-primary) 0%, var(--tetra-secondary) 100%);
				background-size: cover;
				background-position: center;
				background-attachment: fixed;
				color: var(--tetra-white);
				padding: 6rem 0;
				text-align: center;
				position: relative;
				overflow: hidden;
			}

			.hero-bg {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				object-fit: cover;
				z-index: 0;
			}

			.hero::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: rgba(27, 54, 93, 0.3);
				z-index: 1;
			}

			.hero .container {
				position: relative;
				z-index: 2;
			}

			.hero h1 {
				font-size: 3.5rem;
				margin-bottom: 1.5rem;
				font-weight: 700;
				text-shadow: 2px 2px 4px rgba(10, 25, 47, 0.3);
			}

			.hero p {
				font-size: 1.3rem;
				margin-bottom: 2.5rem;
				opacity: 0.95;
				max-width: 700px;
				margin-left: auto;
				margin-right: auto;
				text-shadow: 1px 1px 2px rgba(10, 25, 47, 0.3);
			}

			.cta-button {
				display: inline-block;
				background: var(--tetra-orange);
				color: var(--tetra-white);
				padding: 1.2rem 2.5rem;
				text-decoration: none;
				border-radius: 50px;
				font-weight: 600;
				font-size: 1.1rem;
				transition: transform 0.3s, box-shadow 0.3s, background 0.3s;
				box-shadow: 0 4px 15px rgba(0, 155, 223, 0.2);
			}

			.cta-button:hover {
				transform: translateY(-3px);
				box-shadow: 0 8px 25px rgba(0, 191, 179, 0.3);
				background: var(--tetra-secondary);
				color: var(--tetra-white);
			}

			.features {
				padding: 4rem 0;
			}

			.features h2 {
				text-align: center;
				font-size: 2.5rem;
				margin-bottom: 3rem;
				color: var(--tetra-primary);
			}

			.features-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
			}

			@media (max-width: 768px) {
				.hero h1 {
					font-size: 2.5rem;
				}
				.hero p {
					font-size: 1.1rem;
				}
				.features-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Navigation currentPage="home" />

		<section class="hero">
			<img src={heroBgImg.src} alt="" class="hero-bg" />
			<div class="container">
				<h1>AI Performance Optimization</h1>
				<p>Master AI resource management with expert guides on cost optimization, performance tuning, and infrastructure best practices.</p>
				<a href="/learn" class="cta-button">Start Learning</a>
			</div>
		</section>

		<section class="features">
			<div class="container">
				<h2>What You'll Learn</h2>
				<div class="features-grid">
					{features.map(feature => (
						<FeatureCard 
							title={feature.title}
							description={feature.description}
							image={feature.image}
							imageAlt={feature.imageAlt}
						/>
					))}
				</div>
			</div>
		</section>

		<Footer />
	</body>
</html>
