---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import Section from '../../components/Section.astro';

// Generated learning article images
import gettingStartedImg from '../../assets/images/getting-started.jpg';
import costOptimizationImg from '../../assets/images/cost-optimization-strategies.jpg';
import performanceMonitoringImg from '../../assets/images/performance-monitoring.jpg';
import providerIntegrationImg from '../../assets/images/major-ai-provider-integration.jpg';
import errorHandlingImg from '../../assets/images/error-handling-and-recovery.jpg';
import unifiedManagementImg from '../../assets/images/unified-ai-model-management.jpg';
import modelHealthImg from '../../assets/images/monitoring-ai-model-health.jpg';
import intelligentRoutingImg from '../../assets/images/intelligent-routing.jpg';
import tokenOptimizationImg from '../../assets/images/token-optimization.jpg';
import optimizationPlatformsImg from '../../assets/images/popular-optimization-platforms.jpg';

export async function getStaticPaths() {
  const learningPosts = await getCollection('learn');
  return learningPosts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();

// Image mapping for learning articles
const articleImages = {
  'getting-started': gettingStartedImg,
  'advanced-optimization-techniques': costOptimizationImg,
  'ai-model-performance-troubleshooting': performanceMonitoringImg,
  'major-ai-provider-integration': providerIntegrationImg,
  'ai-model-error-handling-techniques': errorHandlingImg,
  'ai-api-fallback-implementation': errorHandlingImg,
  'ai-model-error-recovery': errorHandlingImg,
  'unified-ai-model-management': unifiedManagementImg,
  'monitoring-ai-model-health': modelHealthImg,
  'intelligent-model-selection': intelligentRoutingImg,
  'load-balancing-for-ai-models': intelligentRoutingImg,
  'ai-model-routing-load-balancing': intelligentRoutingImg,
  'automatic-token-optimization': tokenOptimizationImg,
  'popular-optimization-platforms': optimizationPlatformsImg,
};

// Function to get image for article
function getArticleImage(slug) {
  return articleImages[slug] || null;
}

// SEO metadata
const title = `${post.data.title} | AI Performance Optimization`;
const description = post.data.description;
const canonicalURL = `https://aiperformanceoptimization.com/learn/${post.slug}`;
const articleImage = getArticleImage(post.slug);
---

<Layout 
  title={title} 
  description={description} 
  canonicalURL={canonicalURL}
  currentPage="learn"
  pageType="article"
>
  <Hero 
    title={post.data.title}
    description={post.data.description}
    showCta={false}
    size="small"
    backgroundImage={articleImage}
  />

  <Section>
    <article>
      <Content />
    </article>
    
    <div class="article-navigation">
      <a href="/learn" class="back-link">‚Üê Back to Learning Center</a>
    </div>
  </Section>

  <style>
    .article-navigation {
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 1px solid #eee;
    }

    .back-link {
      color: var(--tetra-secondary);
      text-decoration: none;
      font-weight: 500;
      transition: color 0.2s;
    }

    .back-link:hover {
      color: var(--tetra-primary);
    }
  </style>
</Layout>