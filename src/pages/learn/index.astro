---
import { getCollection } from 'astro:content';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

// Get all learn articles
const learnArticles = await getCollection('learn');

// Group articles by category (supporting multiple categories per article)
const articlesByCategory = {
  'Cost Optimization': learnArticles.filter(article => 
    Array.isArray(article.data.category) 
      ? article.data.category.includes('Cost Optimization')
      : article.data.category === 'Cost Optimization'
  ),
  'Performance Optimization': learnArticles.filter(article => 
    Array.isArray(article.data.category) 
      ? article.data.category.includes('Performance Optimization')
      : article.data.category === 'Performance Optimization'
  ),
  'Resiliency': learnArticles.filter(article => 
    Array.isArray(article.data.category) 
      ? article.data.category.includes('Resiliency')
      : article.data.category === 'Resiliency'
  ),
  'Infrastructure & Tools': learnArticles.filter(article => 
    Array.isArray(article.data.category) 
      ? article.data.category.includes('Infrastructure & Tools')
      : article.data.category === 'Infrastructure & Tools'
  ),
  'Advanced Techniques': learnArticles.filter(article => 
    Array.isArray(article.data.category) 
      ? article.data.category.includes('Advanced Techniques')
      : article.data.category === 'Advanced Techniques'
  ),
  'Enterprise Solutions': learnArticles.filter(article => 
    Array.isArray(article.data.category) 
      ? article.data.category.includes('Enterprise Solutions')
      : article.data.category === 'Enterprise Solutions'
  ),
};

// Get featured articles (first 3)
const featuredArticles = learnArticles.slice(0, 3);

// SEO metadata
const title = "AI Resource Optimization Learning Center: Expert Guides & Tutorials";
const description = "Master AI resource optimization with our comprehensive learning center. Expert guides, tutorials, and best practices for optimizing compute, memory, and costs.";
const canonicalURL = "https://aiperformanceoptimization.com/learn";
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "AI Resource Optimization Learning Center",
  "description": "Expert guides and tutorials for AI resource optimization",
  "url": canonicalURL
};
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content="AI resource optimization learning, AI optimization tutorials, machine learning optimization guides, AI performance tutorials, compute optimization guides, memory optimization tutorials, AI cost optimization learning" />
		<meta name="author" content="AI Cost Optimization Experts" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/og-image.jpg" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content="/og-image.jpg" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Structured Data -->
		<script type="application/ld+json">{JSON.stringify(jsonLd)}</script>
		
