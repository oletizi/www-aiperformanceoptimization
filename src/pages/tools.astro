---
// Import components
import Layout from '../layouts/Layout.astro';

// Import MDX content
import ToolsContent from '../content/tools.mdx';

// SEO metadata
const title = "AI Performance Optimization Tools: Essential Resources for AI Management";
const description = "Discover essential tools for AI performance optimization, cost management, and infrastructure monitoring. Expert-curated resources for optimizing your AI systems.";
const canonicalURL = "https://aiperformanceoptimization.com/tools";
---

<Layout 
  title={title} 
  description={description} 
  canonicalURL={canonicalURL}
  currentPage="tools"
>
  <section class="page-header">
    <div class="container">
      <h1>AI Performance Optimization Tools</h1>
      <p>Essential resources and platforms for optimizing AI performance, monitoring costs, and managing infrastructure</p>
    </div>
  </section>

  <main class="container">
    <ToolsContent />
  </main>
</Layout>