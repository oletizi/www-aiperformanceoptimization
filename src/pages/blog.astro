---
// Import components
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

// SEO metadata
const title = "AI Performance Optimization Blog: Latest Insights & Strategies";
const description = "Stay updated with the latest insights, strategies, and best practices for AI performance optimization. Expert analysis and practical tips for optimizing your AI systems.";
const canonicalURL = "https://aiperformanceoptimization.com/blog";
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "AI Performance Optimization Blog",
  "description": "Latest insights and strategies for AI performance optimization",
  "url": canonicalURL
};
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content="AI optimization blog, AI performance insights, machine learning optimization, AI cost management, AI best practices" />
		<meta name="author" content="AI Performance Optimization Experts" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/og-image.jpg" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content="/og-image.jpg" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Structured Data -->
		<script type="application/ld+json">{JSON.stringify(jsonLd)}</script>
		
		<!-- Styles -->
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			
			body {
				font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				line-height: 1.6;
				color: #333;
				background-color: #fafafa;
				padding-top: 80px; /* Account for fixed navigation */
			}
			
			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 20px;
			}
			
			.page-header {
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				color: white;
				padding: 3rem 0;
				text-align: center;
			}
			
			.page-header h1 {
				font-size: 2.5rem;
				margin-bottom: 1rem;
				font-weight: 700;
			}
			
			main {
				padding: 4rem 0;
			}
			
			.blog-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
				gap: 2rem;
				margin: 3rem 0;
			}
			
			.blog-card {
				background: white;
				border-radius: 15px;
				overflow: hidden;
				box-shadow: 0 4px 6px rgba(0,0,0,0.1);
				transition: transform 0.3s, box-shadow 0.3s;
			}
			
			.blog-card:hover {
				transform: translateY(-5px);
				box-shadow: 0 8px 25px rgba(0,0,0,0.15);
			}
			
			.blog-content {
				padding: 2rem;
			}
			
			.blog-content h3 {
				color: #667eea;
				margin-bottom: 1rem;
				font-size: 1.3rem;
			}
			
			.blog-content p {
				color: #666;
				margin-bottom: 1rem;
			}
			
			.blog-meta {
				color: #999;
				font-size: 0.9rem;
				margin-bottom: 1rem;
			}
			
			.blog-link {
				color: #667eea;
				text-decoration: none;
				font-weight: 600;
				font-size: 0.9rem;
			}
			
			.blog-link:hover {
				text-decoration: underline;
			}
			
			@media (max-width: 768px) {
				.page-header h1 {
					font-size: 2rem;
				}
				
				.blog-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Navigation currentPage="blog" />

		<section class="page-header">
			<div class="container">
				<h1>AI Performance Optimization Blog</h1>
				<p>Latest insights, strategies, and best practices for optimizing AI performance</p>
			</div>
		</section>

		<main class="container">
			<div class="blog-grid">
				<article class="blog-card">
					<div class="blog-content">
						<h3>Calculate AI Model Costs: A Comprehensive Guide</h3>
						<p>Learn how to accurately calculate and predict AI model costs across different providers and use cases.</p>
						<div class="blog-meta">Published: December 15, 2024 • 8 min read</div>
						<a href="/blog/calculate-ai-model-costs" class="blog-link">Read More →</a>
					</div>
				</article>
				
				<article class="blog-card">
					<div class="blog-content">
						<h3>Model Compression Techniques for AI Optimization</h3>
						<p>Explore advanced model compression techniques to reduce AI model size and improve performance.</p>
						<div class="blog-meta">Published: December 15, 2024 • 10 min read</div>
						<a href="/blog/model-compression-techniques" class="blog-link">Read More →</a>
					</div>
				</article>
			</div>
		</main>

		<Footer />
	</body>
</html> 